{
  "ts-node": {
    "files": true
  },
  "files": ["src/custom.d.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["src/custom.d.ts"]
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
